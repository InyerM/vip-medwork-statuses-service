{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "isolatedModules": true,
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["src/app/*"],
      "@/tests/*": ["tests/*"],
      "@/common/*": ["src/common/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".husky/install.mjs", "lint-staged.config.js"]
}
